pipeline {
    agent any
    stages {
        stage('checkout') {
            steps {
                 checkout scm
            }
        }
         stage('init') {
            steps {
                dir('day2instance_bucket'){
                sh "terraform init"
                }
            }
        }
        stage('plan') {
            steps {
                dir('day2instance_bucket'){
                sh "terraform plan"
                }      
            }
        }
        stage('action') {
            steps {
                dir('day2instance_bucket'){
                echo "Terraform action is --> ${action}"
                sh "terraform ${action} -auto-approve"
                }
            }    
        }
    }
}
